---
/**
 * 404 Not Found Page
 * Displayed when a requested page doesn't exist
 */
export const prerender = true;

import DocsHeader from '@/components/DocsHeader.astro';
import DocsLayout from '@/layouts/DocsLayout.astro';
---

<DocsLayout title="Page Not Found" description="The requested page could not be found">
  <DocsHeader />

  <main class="flex-1 min-h-[calc(100vh-3.5rem)]">
    <div class="mx-auto max-w-4xl px-6 py-16 lg:px-8 text-center">
      <div class="mb-8">
        <h1 class="text-9xl font-bold text-muted-foreground/30">404</h1>
      </div>
      <h2 class="text-3xl font-bold tracking-tight mb-4">Page Not Found</h2>
      <p class="text-lg text-muted-foreground mb-8 max-w-md mx-auto">
        Sorry, the page you're looking for doesn't exist or has been moved.
      </p>
      <a
        href="/"
        class="inline-flex items-center justify-center rounded-md bg-primary text-primary-foreground px-6 py-3 text-sm font-medium transition-colors hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
      >
        <svg
          class="mr-2 h-4 w-4"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 19l-7-7m0 0l7-7m-7 7h18"
          />
        </svg>
        Back to Home
      </a>
    </div>
  </main>
</DocsLayout>
